<!DOCTYPE html>
<html>
  <head>
    <title>Wiki</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'https://cdnjs.cloudflare.com/ajax/libs/bulma/0.2.3/css/bulma.min.css' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="nav" style="padding: 1.5%;">

      <div class="nav-left">
        <a class="nav-item is-brand" href="#">
          <img src="http://bulma.io/images/bulma-type.png" alt="Bulma logo">
        </a>
      </div>

        <div class="tabs">
          <ul>
            <li><%= link_to 'All', root_path %></li>
            <% Category.all.each do |category| %>
              <li><%= link_to category.name, articles_path(category: category.name) %></li>
            <% end %>
          </ul>
        </div>
      

      <div class="nav-right nav-menu">
        <%= link_to 'Home', root_path, class: 'nav-item' %>
        <% if current_user %>
          <%= link_to 'Logout', logout_path, class: 'nav-item' %>
          <%= link_to 'New Article', new_article_path, class: 'nav-item' %>
          <% else %>
          <%= link_to 'Login', login_path, class: 'nav-item' %>
        <% end %>
      </div>

    </nav>
    <%= yield %>
  </body>
</html>
